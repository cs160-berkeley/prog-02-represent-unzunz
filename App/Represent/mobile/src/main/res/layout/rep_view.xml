<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="186dp"
    android:background="@drawable/text_view_border">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:padding="12dp">
    <TextView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:layout_gravity="center_vertical|right"
        android:text="D"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:background="@drawable/blue_circle_bg"
        android:id="@+id/rep_party"
        android:elevation="2dp"/>
    <ImageView
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/circle"
        android:background="#FFFFFF"
        android:id="@+id/rep_pic"
        android:padding="12dp"
        android:elevation="1dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="6dp"
            android:text="Barbara Lee"
            android:textSize="18sp"
            android:textColor="@color/textPrimary"
            android:color="#FFFFFF"
            android:id="@+id/rep_name" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="6dp"
            android:text="barbs@gmail.com"
            android:textSize="12sp"
            android:color="#FFFFFF"
            android:id="@+id/rep_email"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="6dp"
            android:text="http://leehouse.com"
            android:textSize="12sp"
            android:color="#FFFFFF"
            android:id="@+id/rep_web"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="12sp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
            android:color="#FFFFFF"
            android:lineSpacingExtra="6dp"
            android:id="@+id/rep_tweet"/>
    </LinearLayout>
</LinearLayout>